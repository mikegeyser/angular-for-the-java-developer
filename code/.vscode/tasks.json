{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "mvn",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "args": ["-f", "${workspaceRoot}/api/pom.xml"],
  "tasks": [
    {
      "taskName": "clean",
      "args": ["-B", "clean"],
      "isBuildCommand": true
    },
    {
      "taskName": "install",
      "args": ["-B", "install"],
      "isBuildCommand": true
    }
  ]
}